@model SiteMentoria.Models.Atividade

@{
    ViewData["Title"] = "Editar";
}

<h1 class="display-uni">Editar</h1>

<h4 class="display-uni">Atividade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Professor)
                @Html.DropDownListFor(model => model.Professor.Id, new SelectList(ViewBag.Professores, "Id", "Nome"), "Selecione um professor", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Professor)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Aluno)
                @Html.DropDownListFor(model => model.Aluno.Id, new SelectList(ViewBag.Alunos, "Id", "Nome"), "Selecione um aluno", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Aluno)
            </div>
            <div class="form-group">
                <label asp-for="Tema" class="control-label"></label>
                <input asp-for="Tema" class="form-control" />
                <span asp-validation-for="Tema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AtividadeCodigo" class="control-label"></label>
                <input asp-for="AtividadeCodigo" class="form-control" />
                <span asp-validation-for="AtividadeCodigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpAprendizado" class="control-label"></label>
                <input asp-for="OpAprendizado" class="form-control" />
                <span asp-validation-for="OpAprendizado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcAprendizado" class="control-label"></label>
                <input asp-for="AcAprendizado" class="form-control" />
                <span asp-validation-for="AcAprendizado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataMensuracao" class="control-label"></label>
                <input asp-for="DataMensuracao" class="form-control" />
                <span asp-validation-for="DataMensuracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormMensuracao" class="control-label"></label>
                <input asp-for="FormMensuracao" class="form-control" />
                <span asp-validation-for="FormMensuracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resultado" class="control-label"></label>
                <input asp-for="Resultado" class="form-control" />
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Status)
                @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.Status, "Id", "Nome"), "Selecione um status", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status)
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary bg-dark-uni" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="display-uni" href="javascript:void(0);" onclick="history.go(-1);">Voltar</a>    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
