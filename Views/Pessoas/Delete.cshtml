@model SiteMentoria.Models.Pessoa

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="display-uni">Deletar</h1>

<h3 class="display-uni">Você tem certeza que deseja deletar esta atividade?</h3>
<div>
    <h4 class="display-uni">Pessoa</h4>
    <hr />
    <table class="table table-striped">
        <tr>
            <td class="col-sm-2 display-uni font-weight-bold">
                @Html.DisplayNameFor(model => model.Nome)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2 display-uni font-weight-bold">
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2 display-uni font-weight-bold">
                @Html.DisplayNameFor(model => model.IsProfessor)
            </td>
